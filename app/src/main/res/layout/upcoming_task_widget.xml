<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_card_bg"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Titlu (descriere task) -->
    <TextView
        android:id="@+id/widget_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/widget_text_primary"
        android:text="@string/no_upcoming_tasks" />

    <!-- Rând de chip-uri: categorie + timp estimat -->
    <LinearLayout
        android:id="@+id/widget_info_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/widget_task_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chip_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textColor="@color/widget_text_primary" />

        <TextView
            android:id="@+id/widget_task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chip_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="6dp"
            android:textSize="12sp"
            android:textColor="@color/widget_text_primary" />
    </LinearLayout>

    <!-- Rând deadline + dificultate (bulină colorată) -->
    <LinearLayout
        android:id="@+id/widget_deadline_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_menu_today"
            app:tint="@color/widget_text_secondary" />

        <TextView
            android:id="@+id/widget_task_deadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/widget_text_secondary" />

        <!-- bulină colorată + text dificultate -->
        <TextView
            android:id="@+id/widget_task_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
